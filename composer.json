{
    "name": "reviewapp/wordpress-plugin",
    "description": "WordPress plugin for ReviewApp integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "ReviewApp",
            "email": "support@reviewapp.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^3.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "ReviewApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReviewApp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=WordPress src/",
        "lint-fix": "phpcbf --standard=WordPress src/",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}